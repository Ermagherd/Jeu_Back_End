doctype html
head
	include includes/head.pug
// Navigation
include includes/nav.pug
// Header
header.masthead
	h1(style="margin-bottom: 25px") Hello #{pseudo}
	canvas#canvas()
	.container
		//- .intro-text
		//-   .intro-lead-in Welcome To Our Studio!
		//-   .intro-heading.text-uppercase It&apos;s Nice To Meet You
		//-   a.btn.btn-primary.btn-xl.text-uppercase.js-scroll-trigger(href='#services') Tell Me More
// Contact
section#contact
	.container
		.row
			.col-lg-12.text-center
				h2.section-heading.text-uppercase Contact
				h3.section-subheading.text-muted Vous pouvez me contacter en remplissant le formulaire suivant.
		.row
			.col-lg-12
				form#connexionform(name='sentMessage' novalidate='novalidate')
					.row
						.col-md-6
							.form-group
								input#name.form-control(type='text' placeholder='Votre nom *' required='required' data-validation-required-message='Votre nom.')
								p.help-block.text-danger
							.form-group
								input#email.form-control(type='email' placeholder='Votre email *' required='required' data-validation-required-message='Votre email.')
								p.help-block.text-danger
							.form-group
								input#phone.form-control(type='tel' placeholder='Votre numéro de téléphone' required='required' data-validation-required-message='Votre numéro de téléphone.')
								p.help-block.text-danger
						.col-md-6
							.form-group
								textarea#message.form-control(placeholder='Votre message *' required='required' data-validation-required-message='Votre message.')
								p.help-block.text-danger
						.clearfix
						.col-lg-12.text-center
							#success
							button#sendMessageButton.btn.btn-primary.btn-xl.text-uppercase(type='submit') Envoyer
include includes/footer.pug
